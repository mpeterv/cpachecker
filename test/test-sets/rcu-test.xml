<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.0//EN" "http://www.sosy-lab.org/benchexec/benchmark-1.0.dtd">
<benchmark tool="cpachecker" timelimit="900 s" hardtimelimit="1000 s" memlimit="6 GB" cpuCores="4">
  <!-- This file contains regression tests from the LDV project.
       It expects the git repository git@bitbucket.org:dbeyer/ldv-benchmarks.git
       to be checked out at test/programs/ldv-benchmarks. -->

  <option name="-noout"/>
  <option name="-heap">5000M</option>
  <option name="-ldv"/>

  <tasks name="RCU-tests">
    <includesfile>../programs/rcu/rcu-test.set</includesfile>
    <propertyfile>${sourcefile_path}/ALL.prp</propertyfile>
  </tasks> 

  <rundefinition>
  </rundefinition>
</benchmark>
